<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/modeBtn_imgBg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/mode_button_selector" />

        <ImageView
            android:id="@+id/modeBtn_imgIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintBottom_toBottomOf="@+id/modeBtn_imgBg"
            app:layout_constraintEnd_toEndOf="@+id/modeBtn_imgBg"
            app:layout_constraintStart_toStartOf="@+id/modeBtn_imgBg"
            app:layout_constraintTop_toTopOf="@+id/modeBtn_imgBg"
            app:srcCompat="@null" />

        <TextView
            android:id="@+id/modeBtn_tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mode"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/modeBtn_imgBg"
            app:layout_constraintStart_toStartOf="@+id/modeBtn_imgBg"
            app:layout_constraintTop_toBottomOf="@+id/modeBtn_imgBg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>